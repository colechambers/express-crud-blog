<div class="container container-custom">
  <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large blue">
      <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
      <li><a class="btn-floating red darken-1" id="delete-user-btn"><i class="material-icons">delete</i></a></li>
      <li><a href="/users/{{user.id}}/edit" class="btn-floating yellow darken-1"><i class="material-icons">mode_edit</i></a></li>
    </ul>
  </div>
  <img class="user-image circle" src="{{user.avatar}}" alt="{{user.first_name}} + {{user.last_name}}" />
  <h2>{{user.first_name}} {{user.last_name}}</h2>
  <p>{{user.bio}}</p>
</div>
